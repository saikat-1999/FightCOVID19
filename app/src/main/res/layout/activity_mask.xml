<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When to use masks"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/blue"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="If you are healthy, you only need to wear a mask if you are taking care of a person with suspected 2019-nCoV infection.\n\nWear a mask if you are coughing or sneezing.\n\nMasks are effective only when used in combination with frequent hand-cleaning with alcohol-based hand rub or soap and water.\n\nIf you wear a mask, then you must know how to use it and dispose of it properly."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="How to use masks"
            android:textColor="@color/blue"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginRight="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="25dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:src="@drawable/ieee3"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:src="@drawable/ieee4"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:src="@drawable/ieee5"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                android:src="@drawable/ieee6"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_marginRight="0dp"
                android:src="@drawable/ieee7"/>


        </LinearLayout>




    </HorizontalScrollView>

    </LinearLayout>



</RelativeLayout>