                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/myth16"/>

        </LinearLayout>
    </ScrollView>

    </LinearLayout>



</RelativeLayout>